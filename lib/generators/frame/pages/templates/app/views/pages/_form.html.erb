<%%= form_for(@page) do |f| %>
    <%%= render 'shared/error_messages', :object => f.object %>
    <div class="field">
      <%%= f.label :name %>
      <br/>
      <%%= f.text_field :name %>
    </div>
    <div class="field">
      <%%= f.label :title %>
      <br/>
      <%%= f.text_field :title %>
    </div>
    <div class="field">
      <%%= f.label :ordinal %>
      <br/>
      <%%= f.text_field :ordinal %>
    </div>
    <div class="field">
      <%%= f.label :location %>
      <br/>
      <%%= f.select(:location, [['Top', 'topbar'], ['Userbar', 'userbar'], ['Sidebar', 'sidebar'], ['Bottom', 'bottombar'], ['Disabled', 'off']]) %>
    </div>
    <div class="field">
      <%%= f.label :url %>
      <br/>
      <%%= f.url_field :url %>
    </div>
    <div class="field">
      <%%= f.label :content %>
      <br/>
      <%%= f.text_area :content %>
    </div>
    <div class="actions">
      <%%= f.submit %>
    </div>
<%% end %>
